      <ClassTypes>
        <ClassType ID="##CompanyID##.##AppName##.Instances.WithRollup.Group" Accessibility="Public" Abstract="false" Base="MSIL!Microsoft.SystemCenter.InstanceGroup" Hosted="false" Singleton="true" Extension="false" />
